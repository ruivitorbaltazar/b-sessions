<div class="main-card p-4">
  <div class="main-card-header mb-4">
    <h2>Change your password?</h2>
  </div> <!-- end of main-card-header -->

  <div class="main-card-container">

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: "New password",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    label: "Confirm your new password",
                    required: true,
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions d-flex flex-row-reverse justify-content-between">
        <%= f.submit 'Change your password', class: 'btn btn-sm btn-primary' %>
        <div>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>

  </div> <!-- end of main-card-container -->
</div> <!-- end of main-card -->

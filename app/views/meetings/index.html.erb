<div class="meetings-list-headers d-flex flex-row align-items-center py-2 px-4 mb-0">
  <p class="col-6 p-0"><i class="fas fa-tag mr-2"></i>Name</p>
  <p class="col-2 p-0"><i class="far fa-calendar-check mr-2"></i>Start Date</p>
  <p class="col-2 p-0"><i class="far fa-calendar-times mr-2"></i>End Date</p>
</div>

<div class="meetings-list">
  <div id="meetings-host" class="border-bottom">
    <% @meetings_as_host.each do |meeting| %>
      <%= render partial: 'meetings_card', locals: { meeting: meeting } %>
    <% end %>
  </div> <!-- end of meetings-host -->

  <div id="meetings-trainee" class="mt-3">
    <% @meetings_as_trainee.each do |meeting| %>
      <%= render partial: 'meetings_card', locals: { meeting: meeting } %>
    <% end %>
  </div> <!-- end of meetings-trainee -->
</div> <!-- end of meetings-list -->

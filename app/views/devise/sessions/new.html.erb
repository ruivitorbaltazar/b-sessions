<% if action_name == 'home' %>
  <div>
<% else %>
  <div class="main-card p-4">
<% end %>

  <div class="main-card-header mb-4 d-flex flex-row justify-content-between align-items-center">
    <h2>Log in</h2>
    <% if action_name == 'home' %>
      <button class="show-sign-up btn btn-sm btn-outline-secondary">Sign up</button>
    <% end %>
  </div> <!-- end of main-card-header -->

  <div class="main-card-container">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions d-flex flex-row-reverse justify-content-between">
        <%= f.submit 'Log in', class: 'btn btn-sm btn-primary' %>
        <% if action_name != 'home' %>
          <div>
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    <% end %>

  </div> <!-- end of main-card-container -->
</div> <!-- end of main-card -->

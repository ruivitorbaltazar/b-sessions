<div class="sessions-list-headers d-flex flex-row align-items-center py-2 px-4 mb-0">
  <p class="col-6 p-0"><i class="fas fa-tag mr-2"></i>Name</p>
  <p class="col-2 p-0"><i class="far fa-calendar-check mr-2"></i>Start Date</p>
  <p class="col-2 p-0"><i class="far fa-calendar-times mr-2"></i>End Date</p>
</div>

<div class="sessions-list">
  <% @sessions.each do |session| %>
    <div class="sessions-item d-flex flex-row align-items-center mb-3">
      <%= link_to session_path(session), class: 'col-6 p-0' do %>
        <h6><%= session.name %></h6>
      <% end %>
      <p class="col-2 p-0"><%= session.start_date.strftime("%d %b %Y") %></p>
      <p class="col-2 p-0"><%= session.end_date.strftime("%d %b %Y") %></p>
      <div class="sessions-links col-2 m-0 p-0 d-flex flex-row">
        <div class="col-6 p-0 text-right">
          <%= link_to edit_session_path(session), class: 'sessions-edit' do %>
            <i class="fas fa-edit"></i>
          <% end %>
        </div>
        <div class="col-6 p-0 text-right">
          <%= link_to session_path(session), method: :delete, data: { confirm: "Are you sure?" }, class: 'sessions-delete' do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        </div>
      </div> <!-- end of sessions-links -->
    </div> <!-- end of sessions-item -->
  <% end %>
</div> <!-- end of sessions-list -->
